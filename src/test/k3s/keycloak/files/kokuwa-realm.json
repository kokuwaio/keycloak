{
	"id": "kokuwa-id",
	"enabled": true,
	"realm": "kokuwa",
	"loginTheme": "kokuwa",
	"attributes": {
		"frontendUrl": "http://auth.kokuwa.${k3s.ip}.nip.io:8080"
	},
	"users": [
		{
			"id": "kokuwa-admin-id",
			"enabled": true,
			"username": "admin",
			"firstName": "firstName",
			"lastName": "lastName",
			"email": "admin@example.org",
			"credentials": [ { "type": "password", "value": "password" } ],
			"clientRoles": { "realm-management": [ "realm-admin" ] }
		},{
			"id": "kokuwa-horst-id",
			"enabled": true,
			"username": "horst",
			"firstName": "firstName",
			"lastName": "lastName",
			"email": "horst@example.org",
			"credentials": [ { "type": "password", "value": "password" } ]
		}
	],
	"clients": [
		{
			"id": "kokuwa-test-client-id",
			"enabled": true,
			"clientId": "test-client",
			"standardFlowEnabled": true,
			"implicitFlowEnabled": true,
			"directAccessGrantsEnabled": true,
			"serviceAccountsEnabled": false,
			"publicClient": true,
			"protocol": "openid-connect",
			"protocolMappers": [],
			"defaultClientScopes": [],
			"optionalClientScopes": [],
			"attributes": {"access.token.lifespan": 86400}
		}
	],
	"eventsEnabled": true,
	"eventsListeners": [ "metrics-listener", "jboss-logging" ],
	"adminEventsEnabled": true,
	"adminEventsDetailsEnabled": true,
	"smtpServer": {
		"host": "mailhog",
		"from": "noreply@kokuwa.${k3s.ip}.nip.io",
		"fromDisplayName": "Kokuwa.io"
	}
}
